# cat /etc/init.d/S50sshd
#!/bin/sh
#
# sshd        Starts sshd.
#

DAEMON="sshd"
PIDFILE="/var/run/$DAEMON.pid"
DEVMODE_FLAG="/boot/devmode"
LOG_TAG="S50sshd"

# Common Beamer init helpers
[ -r /etc/init.d/common-func ] && . /etc/init.d/common-func

# Make sure the ssh-keygen program exists
[ -f /usr/bin/ssh-keygen ] || exit 0

umask 077

start() {
        # Create any missing keys, as we need these for the ssh tunnel to work, not only for development mode.
        /usr/bin/ssh-keygen -A

        # Only start SSH daemon in development mode
        if [ ! -f "$DEVMODE_FLAG" ]; then
                log_info "sshd: $DEVMODE_FLAG not present, not starting (normal in production)."
                return 0
        fi

        printf "Starting %s: " "$DAEMON"
        log_info "Starting $DAEMON"
        start-stop-daemon --start --pidfile "$PIDFILE" \
                --exec "/usr/sbin/$DAEMON"
        status=$?
        if [ "$status" -eq 0 ]; then
                log_info "OK - $DAEMON started (pid file $PIDFILE)"
        else
                log_err "FAIL - could not start $DAEMON"
        fi
        return "$status"
}

stop() {
        printf "Stopping %s: " "$DAEMON"
        log_info "Stopping $DAEMON"
        start-stop-daemon --stop --pidfile "$PIDFILE" \
                --exec "/usr/sbin/$DAEMON"
        status=$?
        if [ "$status" -eq 0 ]; then
                log_info "OK - $DAEMON stopped"
        else
                log_err "FAIL - could not stop $DAEMON"
        fi
        # sshd deletes its PID file on exit, wait for it to be gone
        while [ -f "$PIDFILE" ]; do
                sleep 0.1
        done
        return "$status"
}

restart() {
        stop
        start
}

reload() {
        printf "Reloading %s config: " "$DAEMON"
        start-stop-daemon --stop --signal HUP -q --pidfile "$PIDFILE" \
                --exec "/usr/sbin/$DAEMON"
        status=$?
        if [ "$status" -eq 0 ]; then
                echo "OK"
        else
                echo "FAIL"
        fi
        return "$status"
}

case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        restart)
                restart
                ;;
        reload)
                reload
                ;;
        *)
                echo "Usage: $0 {start|stop|restart|reload}"
                exit 1
esac

exit $?
